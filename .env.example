# Variables de entorno para Buho Eats Backend

# Puerto del servidor
PORT=3000

# Seguridad - IMPORTANTE: Genera un secret fuerte con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CAMBIAR_ESTE_SECRET_POR_UNO_GENERADO_CRIPTOGRAFICAMENTE_DE_AL_MENOS_64_BYTES
JWT_EXPIRATION=2h

# Base de datos
DB_PATH=./database/buho-eats.db

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
ATTEMPT_RESET_TIME=300000

# CORS (separar con comas si son múltiples orígenes)
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# Seguridad adicional
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=1800000
